<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Actions for Administrative Area Large -->
    <record id="action_g2p_administrative_area_large" model="ir.actions.act_window">
        <field name="name">Administrative Area Large</field>
        <field name="res_model">g2p.administrative.area.large</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Views for Administrative Area Large -->
    <record id="view_g2p_administrative_area_large_form" model="ir.ui.view">
        <field name="name">g2p.administrative.area.large.form</field>
        <field name="model">g2p.administrative.area.large</field>
        <field name="arch" type="xml">
            <form string="G2P Administrative Area Large">
                <sheet>
                    <group>
                        <field name="area_mnemonic" />
                        <field name="area_description" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_g2p_administrative_area_large_tree" model="ir.ui.view">
        <field name="name">g2p.administrative.area.large.tree</field>
        <field name="model">g2p.administrative.area.large</field>
        <field name="arch" type="xml">
            <tree string="G2P Administrative Area Large" limit="10">
                <control>
                    <create string="Add Administrative Area (Large)"/>
                </control>
                <field name="area_mnemonic"/>
                <field name="area_description"/>
                <button name="action_open_edit" type="object" class="fa fa-pencil" title="Edit"/>
            </tree>
        </field>
    </record>
</odoo>
