<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Actions for Sponsor Bank -->
    <record id="action_g2p_sponsor_bank" model="ir.actions.act_window">
        <field name="name">Sponsor Banks</field>
        <field name="res_model">g2p.warehouse</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('is_sponsor_bank', '=', True)]</field>
        <field name="context">{'default_is_sponsor_bank': True}</field>
        <field name="views">[('view_g2p_sponsor_bank_tree', 'tree'),('view_g2p_sponsor_bank_form', 'form')]</field>
    </record>

    <!-- Views for G2P Sponsor Bank -->
    <record id="view_g2p_sponsor_bank_form" model="ir.ui.view">
        <field name="name">g2p.sponsor.bank.form</field>
        <field name="model">g2p.warehouse</field>
        <field name="arch" type="xml">
            <form string="G2P Sponsor Bank">
                <sheet>
                    <group colspan="2">
                        <group string="Sponsor Bank Details">
                            <field name="name" readonly="not context.get('warehouse_form_edit')"/>
                            <field name="warehouse_mnemonic" readonly="not context.get('warehouse_form_edit')"/>
                            <field name="is_sponsor_bank" invisible="1"/>
                        </group>
                        <group string="Administrator Details">
                            <field name="admin_name" string="Admin Name" readonly="not context.get('warehouse_form_edit')"/>
                            <field name="admin_email" string="Admin Email" readonly="not context.get('warehouse_form_edit')"/>
                            <field name="admin_mobile" string="Admin Mobile" readonly="not context.get('warehouse_form_edit')"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Sponsor Bank Program Benefit Code">
                            <field name="warehouse_program_benefit_codes" nolabel="1" options="{'no_quick_create': True}"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_g2p_sponsor_bank_tree" model="ir.ui.view">
        <field name="name">g2p.sponsor.bank.tree</field>
        <field name="model">g2p.warehouse</field>
        <field name="arch" type="xml">
            <tree string="G2P Sponsor Bank" limit="10">
                <control>
                    <create string="Add Sponsor Bank"/>
                </control>
                <field name="name"/>
                <field name="warehouse_mnemonic"/>
                <button name="action_open_edit" type="object" class="fa fa-pencil" title="Edit"/>
            </tree>
        </field>
    </record>
</odoo>
