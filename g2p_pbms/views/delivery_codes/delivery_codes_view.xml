<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Actions for Delivery Codes -->
    <record id="action_g2p_delivery_codes" model="ir.actions.act_window">
        <field name="name">Delivery Codes</field>
        <field name="res_model">g2p.delivery.codes</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Views for Delivery Codes -->
    <record id="view_g2p_delivery_codes_form" model="ir.ui.view">
        <field name="name">g2p.delivery.codes.form</field>
        <field name="model">g2p.delivery.codes</field>
        <field name="arch" type="xml">
            <form string="Delivery Codes">
                <sheet>
                    <group>
                        <field name="delivery_mnemonic" readonly="not context.get('delivery_code_form_edit')"/>
                        <field name="delivery_type" readonly="not context.get('delivery_code_form_edit')"/>
                        <field name="delivery_classification_id" readonly="not context.get('delivery_code_form_edit')"/>
                        <field name="measurement_unit" widget="g2p_pbms.delivery_unit_widget" readonly="not context.get('delivery_code_form_edit')"/>
                        <field name="delivery_description" readonly="not context.get('delivery_code_form_edit')"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_g2p_delivery_codes_tree" model="ir.ui.view">
        <field name="name">g2p.delivery.codes.tree</field>
        <field name="model">g2p.delivery.codes</field>
        <field name="arch" type="xml">
            <tree string="Delivery Codes">
                <field name="delivery_mnemonic"/>
                <field name="delivery_type"/>
                <field name="delivery_classification_id"/>
                <field name="measurement_unit"/>
                <field name="delivery_description"/>
                <button name="action_open_edit" type="object" class="fa fa-pencil"/>
            </tree>
        </field>
    </record>

    <!-- Menu for Delivery Codes -->
    <menuitem id="menu_g2p_delivery_codes_action" name="Delivery Codes" parent="menu_g2p_agencies" action="action_g2p_delivery_codes" sequence="4"/>
</odoo>
