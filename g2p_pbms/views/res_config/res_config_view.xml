<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="openg2p_inherit_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">openg2p.res.config.settings.view.inherit.setup</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="999" />
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app
                    string="G2P PBMS Settings"
                    name="g2p_config_settings"
                    logo="/g2p_registry_base/static/description/icon.png">
                    <block title="G2P PBMS Settings">
                        <setting string="EEE API URL" help="EEE REST API URL Endpoint (e.g., https://localhost:8000 - no path allowed)">
                            <field name="g2p_pbms_eee_api_url" />
                        </setting>
                    </block>
                    <block title="G2P Bridge Settings">
                        <setting string="Bridge API URL" help="Bridge API URL Endpoint (e.g., https://localhost:8000 - no path allowed)">
                            <field name="g2p_bridge_api_url" />
                        </setting>
                    </block>
                    <block title="G2P Document Store Settings">
                        <setting string="Default Document Store Config" help="Select the document store to be used for default document creation">
                            <field name="g2p_document_store" />
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>
</odoo>