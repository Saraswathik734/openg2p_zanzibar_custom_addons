<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Actions -->
    <record id="action_g2p_agencies" model="ir.actions.act_window">
        <field name="name">Agencies</field>
        <field name="res_model">g2p.agencies</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="action_g2p_agency_regions" model="ir.actions.act_window">
        <field name="name">Agency Regions</field>
        <field name="res_model">g2p.agency.regions</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="action_g2p_delivery_classification_codes" model="ir.actions.act_window">
        <field name="name">Delivery Classification Codes</field>
        <field name="res_model">g2p.delivery.classification.codes</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="action_g2p_delivery_codes" model="ir.actions.act_window">
        <field name="name">Delivery Codes</field>
        <field name="res_model">g2p.delivery.codes</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="action_g2p_agency_delivery_codes" model="ir.actions.act_window">
        <field name="name">Agency Delivery Codes</field>
        <field name="res_model">g2p.agency.delivery.codes</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Views for G2P Agencies -->
    <record id="view_g2p_agencies_form" model="ir.ui.view">
        <field name="name">g2p.agencies.form</field>
        <field name="model">g2p.agencies</field>
        <field name="arch" type="xml">
            <form string="G2P Agencies">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="mnemonic"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_g2p_agencies_tree" model="ir.ui.view">
        <field name="name">g2p.agencies.tree</field>
        <field name="model">g2p.agencies</field>
        <field name="arch" type="xml">
            <tree string="G2P Agencies">
                <field name="name"/>
                <field name="mnemonic"/>
            </tree>
        </field>
    </record>

    <!-- Views for G2P Agency Regions -->
    <record id="view_g2p_agency_regions_form" model="ir.ui.view">
        <field name="name">g2p.agency.regions.form</field>
        <field name="model">g2p.agency.regions</field>
        <field name="arch" type="xml">
            <form string="G2P Agency Regions">
                <sheet>
                    <group>
                        <field name="agency_id"/>
                        <field name="region_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_g2p_agency_regions_tree" model="ir.ui.view">
        <field name="name">g2p.agency.regions.tree</field>
        <field name="model">g2p.agency.regions</field>
        <field name="arch" type="xml">
            <tree string="G2P Agency Regions">
                <field name="agency_id"/>
                <field name="region_id"/>
            </tree>
        </field>
    </record>

    <!-- Views for G2P Delivery Classification Codes -->
    <record id="view_g2p_delivery_classification_codes_form" model="ir.ui.view">
        <field name="name">g2p.delivery.classification.codes.form</field>
        <field name="model">g2p.delivery.classification.codes</field>
        <field name="arch" type="xml">
            <form string="Delivery Classification Codes">
                <sheet>
                    <group>
                        <field name="delivery_classification_mnemonic"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_g2p_delivery_classification_codes_tree" model="ir.ui.view">
        <field name="name">g2p.delivery.classification.codes.tree</field>
        <field name="model">g2p.delivery.classification.codes</field>
        <field name="arch" type="xml">
            <tree string="Delivery Classification Codes">
                <field name="delivery_classification_mnemonic"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <!-- Views for G2P Delivery Codes -->
    <record id="view_g2p_delivery_codes_form" model="ir.ui.view">
        <field name="name">g2p.delivery.codes.form</field>
        <field name="model">g2p.delivery.codes</field>
        <field name="arch" type="xml">
            <form string="Delivery Codes">
                <sheet>
                    <group>
                        <field name="delivery_mnemonic"/>
                        <field name="delivery_type"/>
                        <field name="delivery_classification_id"/>
                        <field name="delivery_description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_g2p_delivery_codes_tree" model="ir.ui.view">
        <field name="name">g2p.delivery.codes.tree</field>
        <field name="model">g2p.delivery.codes</field>
        <field name="arch" type="xml">
            <tree string="Delivery Codes">
                <field name="delivery_mnemonic"/>
                <field name="delivery_type"/>
                <field name="delivery_classification_id"/>
                <field name="delivery_description"/>
            </tree>
        </field>
    </record>

    <!-- Views for G2P Agency Delivery Codes -->
    <record id="view_g2p_agency_delivery_codes_form" model="ir.ui.view">
        <field name="name">g2p.agency.delivery.codes.form</field>
        <field name="model">g2p.agency.delivery.codes</field>
        <field name="arch" type="xml">
            <form string="Agency Delivery Codes">
                <sheet>
                    <group>
                        <field name="agency_id"/>
                        <field name="delivery_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_g2p_agency_delivery_codes_tree" model="ir.ui.view">
        <field name="name">g2p.agency.delivery.codes.tree</field>
        <field name="model">g2p.agency.delivery.codes</field>
        <field name="arch" type="xml">
            <tree string="Agency Delivery Codes">
                <field name="agency_id"/>
                <field name="delivery_id"/>
            </tree>
        </field>
    </record>

    <!-- Menus -->
    <menuitem id="menu_g2p_root" name="PBMS" sequence="1"/>

    <menuitem id="menu_g2p_agencies" name="Agencies" parent="menu_g2p_root" sequence="1"/>

    <menuitem id="menu_g2p_agencies_action" name="Agencies" parent="menu_g2p_agencies" action="action_g2p_agencies" sequence="1"/>

    <menuitem id="menu_g2p_agency_regions_action" name="Agency Regions" parent="menu_g2p_agencies" action="action_g2p_agency_regions" sequence="2" />

    <menuitem id="menu_g2p_delivery_classification_codes_action" name="Delivery Classification Codes" parent="menu_g2p_agencies" action="action_g2p_delivery_classification_codes"  sequence="3"/>

    <menuitem id="menu_g2p_delivery_codes_action" name="Delivery Codes" parent="menu_g2p_agencies" action="action_g2p_delivery_codes"  sequence="4"/>

    <menuitem id="menu_g2p_agency_delivery_codes_action" name="Agency Delivery Codes" parent="menu_g2p_agencies" action="action_g2p_agency_delivery_codes"  sequence="5"/>
</odoo>
