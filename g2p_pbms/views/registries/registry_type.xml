<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Actions -->
    <record id="action_g2p._registry_type" model="ir.actions.act_window">
        <field name="name">Registry Type</field>
        <field name="res_model">g2p.registry.type</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <record id="view_g2p._registry_type_form" model="ir.ui.view">
        <field name="name">g2p.registry.type.form</field>
        <field name="model">g2p.registry.type</field>
        <field name="arch" type="xml">
            <form string="G2P Registry Type">
                <sheet>
                    <group>
                        <field name="program_mnemonic"/>
                        <field name="description"/>
                        <field name="delivery_id"/>
                        <field name="target_registry_type"/>
                        <field name="program_status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_g2p._registry_type_tree" model="ir.ui.view">
        <field name="name">g2p.registry.type.tree</field>
        <field name="model">g2p.registry.type</field>
        <field name="arch" type="xml">
            <tree string="G2P Registry Type">
                <field name="program_mnemonic"/>
                <field name="description"/>
                <field name="delivery_id"/>
                <field name="target_registry_type"/>
                <field name="program_status"/>
            </tree>
        </field>
    </record>
    
<!-- Menus -->
<menuitem id="menu_g2p_root" name="PBMS" sequence="1"/>
<menuitem id="menu_g2p_registry" name="Registry Models" parent="menu_g2p_root" sequence="3"/>

<menuitem id="menu_g2p_registry_type" name="Farmer Registry" parent="menu_g2p_registry" action="action_g2p_farmer_registry" sequence="3"/>
</odoo>