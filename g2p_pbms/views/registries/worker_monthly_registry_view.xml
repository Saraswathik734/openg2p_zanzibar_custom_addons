<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Actions -->
    <record id="action_g2p_worker_monthly_registry" model="ir.actions.act_window">
        <field name="name">Worker Monthly Registry</field>
        <field name="res_model">g2p.worker.monthly.registry</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <record id="view_g2p_worker_monthly_registry_form" model="ir.ui.view">
        <field name="name">g2p.worker.monthly.registry.form</field>
        <field name="model">g2p.worker.monthly.registry</field>
        <field name="arch" type="xml">
            <form string="G2P Worker Monthly Registry">
                <sheet>
                    <group>
                        <field name="unique_id"/>
                        <field name="name"/>
                        <field name="attendance_month"/>
                        <field name="source_type"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_g2p_worker_monthly_registry_tree" model="ir.ui.view">
        <field name="name">g2p.worker.monthly.registry.tree</field>
        <field name="model">g2p.worker.monthly.registry</field>
        <field name="arch" type="xml">
            <tree string="G2P Worker Monthly Registry">
                <field name="unique_id"/>
                <field name="name"/>
                <field name="attendance_month"/>
                <field name="source_type"/>
            </tree>
        </field>
    </record>
</odoo>