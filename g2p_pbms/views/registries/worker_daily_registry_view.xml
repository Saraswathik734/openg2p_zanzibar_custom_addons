<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Actions -->
    <record id="action_g2p_worker_daily_registry" model="ir.actions.act_window">
        <field name="name">Worker Daily Registry</field>
        <field name="res_model">g2p.worker.daily.registry</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <record id="view_g2p_worker_daily_registry_form" model="ir.ui.view">
        <field name="name">g2p.worker.daily.registry.form</field>
        <field name="model">g2p.worker.daily.registry</field>
        <field name="arch" type="xml">
            <form string="G2P Worker Daily Registry">
                <sheet>
                    <group>
                        <field name="unique_id"/>
                        <field name="nrc_number"/>
                        <field name="attendance_date"/>
                        <field name="task"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_g2p_worker_daily_registry_tree" model="ir.ui.view">
        <field name="name">g2p.worker.daily.registry.tree</field>
        <field name="model">g2p.worker.daily.registry</field>
        <field name="arch" type="xml">
            <tree string="G2P Worker Daily Registry">
                <field name="unique_id"/>
                <field name="nrc_number"/>
                <field name="attendance_date"/>
                <field name="task"/>
            </tree>
        </field>
    </record>
</odoo>