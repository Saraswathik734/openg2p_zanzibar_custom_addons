<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Actions -->
    <record id="action_g2p_student_registry" model="ir.actions.act_window">
        <field name="name">Student Registry</field>
        <field name="res_model">g2p.student.registry</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <record id="view_g2p_student_registry_form" model="ir.ui.view">
        <field name="name">g2p.student.registry.form</field>
        <field name="model">g2p.student.registry</field>
        <field name="arch" type="xml">
            <form string="G2P Student Registry">
                <sheet>
                    <group>
                        <field name="unique_id"/>
                        <field name="name"/>
                        <field name="institution_name"/>
                        <field name="date_of_birth"/>
                        <field name="registration_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_g2p_student_registry_tree" model="ir.ui.view">
        <field name="name">g2p.student.registry.tree</field>
        <field name="model">g2p.student.registry</field>
        <field name="arch" type="xml">
            <tree string="G2P Student Registry">
                <field name="unique_id"/>
                <field name="name"/>
                <field name="institution_name"/>
                <field name="date_of_birth"/>
                <field name="registration_date"/>
                <button name="action_open_view" type="object" class="fa fa-eye" title="View"/>
            </tree>
        </field>
    </record>
</odoo>