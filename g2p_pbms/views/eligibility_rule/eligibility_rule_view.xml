<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Actions -->
    <record id="action_g2p_eligibility_rule_definition" model="ir.actions.act_window">
        <field name="name">Eligibility Rule</field>
        <field name="res_model">g2p.eligibility.rule.definition</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="view_g2p_eligibility_rule_definition_form" model="ir.ui.view">
        <field name="name">g2p.eligibility.rule.definition.form</field>
        <field name="model">g2p.eligibility.rule.definition</field>
        <field name="arch" type="xml">
            <form string="Eligibility Rule">
                <sheet>
                    <group>
                        <field name="mnemonic"/>
                        <field name="description"/>
                        <field name="target_registry" invisible="0"/>
                        <!-- Domain widget for the 'farmer' type -->
                         <field name="pbms_domain" widget="domain"
                        options="{'model': 'g2p.farmer.registry'}"
                        invisible="target_registry != 'farmer'"/>
                        <!-- Domain widget for the Student type -->
                         <field name="pbms_domain" widget="domain"
                        options="{'model': 'g2p.student.registry'}"
                        invisible="target_registry != 'student'"/>
                        <!-- Domain widget for the 'worker' type -->
                        <field name="pbms_domain" widget="domain"
                               options="{'model': 'g2p.worker.registry'}"
                               invisible="target_registry != 'worker'"/>
                        <!-- Domain widget for the 'worker_daily' type -->
                        <field name="pbms_domain" widget="domain"
                               options="{'model': 'g2p.worker.daily.registry'}"
                               invisible="target_registry != 'worker_daily'"/>
                        <!-- Domain widget for the 'worker_monthly' type -->
                        <field name="pbms_domain" widget="domain"
                               options="{'model': 'g2p.worker.monthly.registry'}"
                               invisible="target_registry != 'worker_monthly'"/>
                    </group>
                </sheet>
                <sheet>
                    <group>
                        <field name='sql_query'/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="view_g2p_eligibility_rule_definition_tree" model="ir.ui.view">
        <field name="name">g2p.eligibility.rule.definition.tree</field>
        <field name="model">g2p.eligibility.rule.definition</field>
        <field name="arch" type="xml">
            <tree string="Eligibility Rule">
                <control>
                  <create string="Add Eligibility Rule"/>
                </control>
                <field name="mnemonic"/>
                <field name="target_registry" invisible="0"/>
                <field name="description"/>
                <button name="action_open_view" type="object" string="View Eligibility Rule" class="oe_link" title="View Eligibility Rule"/>
            </tree>
        </field>
    </record>
    
</odoo>