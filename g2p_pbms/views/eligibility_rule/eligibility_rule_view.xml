<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Actions -->
    <record id="action_g2p_eligibility_rule_definition" model="ir.actions.act_window">
        <field name="name">Eligibility Rule</field>
        <field name="res_model">g2p.eligibility.rule.definition</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <record id="view_g2p_eligibility_rule_definition_form" model="ir.ui.view">
        <field name="name">g2p.eligibility.rule.definition.form</field>
        <field name="model">g2p.eligibility.rule.definition</field>
        <field name="arch" type="xml">
            <form string="Eligibility Rule">
                <sheet>
                    <group>
                        <field name="mneumonic"/>
                        <field name="description"/>
                        <field name="target_registrant_type"/>
                        <field name="domain"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="view_g2p_eligibility_rule_definition_tree" model="ir.ui.view">
        <field name="name">g2p.eligibility.rule.definition.tree</field>
        <field name="model">g2p.eligibility.rule.definition</field>
        <field name="arch" type="xml">
            <tree string="Eligibility Rule">
                <field name="mneumonic"/>
                <field name="description"/>
                <field name="target_registrant_type"/>
                <field name="domain"/>
            </tree>
        </field>
    </record>
    
<!-- Menus -->
<menuitem id="menu_g2p_root" name="PBMS" sequence="1"/>

<menuitem id="menu_g2p_eligibility_rule_definition" name="Eligibility Rule" parent="menu_g2p_root" action="action_g2p_eligibility_rule_definition" sequence="4"/>
</odoo>