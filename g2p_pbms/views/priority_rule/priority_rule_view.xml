<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Actions -->
    <record id="action_g2p_priority_rule_definition" model="ir.actions.act_window">
        <field name="name">Priority Rule</field>
        <field name="res_model">g2p.priority.rule.definition</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="view_g2p_priority_rule_definition_form" model="ir.ui.view">
        <field name="name">g2p.priority.rule.definition.form</field>
        <field name="model">g2p.priority.rule.definition</field>
        <field name="arch" type="xml">
            <form string="Priority Rule">
                <sheet>
                    <group>
                        <field name="mnemonic"/>
                        <field name="description"/>
                        <field name="target_registry" invisible="0"/>
                        <!-- Domain widget for the 'farmer' type -->
                        <field name="pbms_domain" widget="domain"
                               options="{'model': 'g2p.farmer.registry', 'allowed_fields': ['priority_rank']}"
                               invisible="target_registry != 'farmer'"/>
                        <!-- Domain widget for the 'student' type -->
                        <field name="pbms_domain" widget="domain"
                               options="{'model': 'g2p.student.registry'}, 'allowed_fields': ['priority_rank']}"
                               invisible="target_registry != 'student'"/>
                        <!-- Domain widget for the 'worker' type -->
                        <field name="pbms_domain" widget="domain"
                               options="{'model': 'g2p.worker.registry', 'allowed_fields': ['priority_rank']}"
                               invisible="target_registry != 'worker'"/>
                        <!-- Domain widget for the 'worker_daily' type -->
                        <field name="pbms_domain" widget="domain"
                               options="{'model': 'g2p.worker.daily.registry', 'allowed_fields': ['priority_rank']}"
                               invisible="target_registry != 'worker_daily'"/>
                        <!-- Domain widget for the 'worker_monthly' type -->
                        <field name="pbms_domain" widget="domain"
                               options="{'model': 'g2p.worker.monthly.registry', 'allowed_fields': ['priority_rank']}"
                               invisible="target_registry != 'worker_monthly'"/>

                    </group>
                </sheet>
                <sheet>
                    <group>
                        <field name="sql_query"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_g2p_priority_rule_definition_tree" model="ir.ui.view">
        <field name="name">g2p.priority.rule.definition.tree</field>
        <field name="model">g2p.priority.rule.definition</field>
        <field name="arch" type="xml">
            <tree string="Priority Rule">
                <control>
                    <create string="Add Priority Rule"/>
                </control>
                <field name="mnemonic"/>
                <field name="description"/>
                <field name="target_registry" invisible="0"/>
                <button name="action_open_view" type="object" string="View Priority Rule" class="oe_link" title="View Priority Rule"/>
            </tree>
        </field>
    </record>

  </odoo>
