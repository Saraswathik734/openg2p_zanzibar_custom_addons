<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Actions for Beneficiary List Verification -->
    <record id="action_g2p_beneficiary_list_verification" model="ir.actions.act_window">
        <field name="name">Beneficiary List Verification</field>
        <field name="res_model">g2p.beneficiary.list.verification</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Views for Beneficiary List Verification -->
    <record id="view_g2p_beneficiary_list_verification_form" model="ir.ui.view">
        <field name="name">g2p.beneficiary.list.verification.form</field>
        <field name="model">g2p.beneficiary.list.verification</field>
        <field name="arch" type="xml">
            <form string="Beneficiary List Verification">
                <sheet>
                    <group>
                        <field name="beneficiary_list_id" string="Disbursement List" readonly="1"/>
                        <field name="name" string="Name" />
                        <field name="comment" string="Comment" />
                        <field name="verification_status" readonly="1" widget="badge"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_g2p_beneficiary_list_verification_tree" model="ir.ui.view">
        <field name="name">g2p.beneficiary.list.verification.tree</field>
        <field name="model">g2p.beneficiary.list.verification</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" string="Name"/>
                <field name="comment" string="Comment"/>
                <field name="verification_status" string="Verification Status" widget="badge"/>
                <field name="verification_timestamp" string="Verification Timestamp"/>
                <button name="action_verify" type="object" class="fa fa-check" title="Verify"/>
            </tree>
        </field>
    </record>

    <!-- Menu for Beneficiary List Verification -->
    <!-- <menuitem id="menu_g2p_beneficiary_list_verification_action" name="Beneficiary List Verification" parent="menu_g2p_program" action="action_g2p_beneficiary_list_verification" sequence="4"/> -->
</odoo>
