<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_enrollment_cycle_form" model="ir.ui.view">
        <field name="name">g2p.enrollment.cycle.form</field>
        <field name="model">g2p.enrollment.cycle</field>
        <field name="arch" type="xml">
            <form create="0" delete="0">
                <sheet>
                    <group colspan="2">
                        <group string="Enrollment Cycle">
                            <field name="is_readonly" invisible="1"/>
                            <field name="cycle_number" readonly="1"/>
                            <field name="program_id" readonly="1"/>
                            <field name="approved_for_enrollment" invisible="1"/>
                        </group>
                        <group string="Cycle Configuration">
                            <field name="enrollment_start_date" readonly="is_readonly"/>
                            <field name="enrollment_end_date" readonly="is_readonly"/>
                            <field name="disbursement_start_date" readonly="is_readonly" nolabel="0"/>
                            <field name="disbursement_end_date" readonly="is_readonly" nolabel="0"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Enrollment Lists" invisible="id == False">
                            <field name="beneficiary_list_ids" nolabel="1" readonly="approved_for_enrollment">
                                <tree default_order="creation_date desc" delete="false" limit="10" >
                                    <control>
                                        <create string="Create New Enrollment List" />
                                    </control>
                                    <field name="mnemonic" string="Mnemonic"/>
                                    <field name="eligibility_process_status" string="Eligibility Process Status" widget="badge"/>
                                    <field name="creation_date" string="Created On" readonly="1"/>
                                    <field name="processed_date" string="Processed On" readonly="1"/>
                                    <field name="list_workflow_status" string="Status" widget="badge" invisible="list_workflow_status == 'initiated'"/>                  
                                    <button name="action_open_summary_wizard" type="object" string="View Enrollment List" class="oe_link" invisible="eligibility_process_status!='complete'"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_enrollment_cycle" model="ir.actions.act_window">
        <field name="name">Enrollment Cycle</field>
        <field name="res_model">g2p.enrollment.cycle</field>
        <field name="view_mode">tree</field>
        <field name="context">{}</field>
    </record>

    <record id="view_enrollment_cycle_tree" model="ir.ui.view">
        <field name="name">g2p.enrollment.cycle.tree</field>
        <field name="model">g2p.enrollment.cycle</field>
        <field name="arch" type="xml">
            <tree delete="false" >
                <control>
                    <create string="Create New Enrollment Cycle"/>
                </control>
                <field name="cycle_number" string="Cycle Number"/>
                <field name="enrollment_start_date" string="Enrollment Start Date"/>
                <field name="enrollment_end_date" string="Enrollment End Date"/>
                <field name="disbursement_start_date" string="Disbursement Start Date"/>
                <field name="disbursement_end_date" string="Disbursement End Date"/>
                <field name="approved_for_enrollment" string="Approved for Enrollment"/>
                <button name="action_open_view" type="object" string="View Enrollment Cycle" class="oe_link" />
            </tree>
        </field>
    </record>
</odoo>
