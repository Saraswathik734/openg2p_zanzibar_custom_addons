<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form view for Disbursement Cycle -->
    <record id="view_g2p_disbursement_cycle_form" model="ir.ui.view">
        <field name="name">g2p.disbursement.cycle.form</field>
        <field name="model">g2p.disbursement.cycle</field>
        <field name="arch" type="xml">
            <form create="0" delete="0">
                <sheet>
                    <group>
                        <field name="program_id" readonly="1"/>
                        <field name="cycle_mnemonic" readonly="is_readonly"/>
                        <field name="target_registry" invisible="1"/>
                        <field name="approved_for_disbursement" invisible="1"/>
                        <field name="is_readonly" invisible="1"/>
                    </group>

                    <!-- Hide fields during creation -->
                    <notebook>
                        <!-- Priority Rules -->
                        <page string="Disbursement Rules" invisible="id == False">
                            <field name="priority_rule_ids" readonly="approved_for_disbursement" nolabel="1" options="{'no_quick_create': True}" context="{'default_target_registry': target_registry}"/>
                        </page>
                        <!-- Disbursement List -->
                        <page string="Disbursement List" invisible="id == False">
                            <field name="beneficiary_list_ids" nolabel="1" readonly="approved_for_disbursement">
                                <tree default_order="creation_date desc" delete="false" limit="10" >
                                    <control>
                                        <create string="Create New Disbursement List" />
                                    </control>
                                    <field name="mnemonic" string="Mnemonic"/>
                                    <field name="eligibility_process_status" string="Priority Process Status" widget="badge"/>
                                    <field name="entitlement_process_status" string=" Entitlement Summary Status" widget="badge"/>
                                    <field name="creation_date" string="Created On" readonly="1"/>
                                    <field name="processed_date" string="Processed On" readonly="1"/>
                                    <field name="list_workflow_status" string="Status" widget="badge" invisible="list_workflow_status != 'approved_for_disbursement'"/>
                                    <button name="action_open_summary_wizard" type="object" string="View Disbursement List" class="oe_link" invisible="entitlement_process_status!='complete'"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for Disbursement Cycle -->
    <record id="action_disbursement_cycle" model="ir.actions.act_window">
        <field name="name">Disbursement Cycle</field>
        <field name="res_model">g2p.disbursement.cycle</field>
        <field name="view_mode">tree</field>
        <field name="context">{}</field>
    </record>

    <!-- Tree view for Disbursement Cycle -->
    <record id="view_g2p_disbursement_cycle_tree" model="ir.ui.view">
        <field name="name">g2p.disbursement.cycle.tree</field>
        <field name="model">g2p.disbursement.cycle</field>
        <field name="arch" type="xml">
            <tree default_order="creation_date desc" delete="false" >
                <control>
                    <create string="Create New Disbursement Cycle"/>
                </control>
                <field name="cycle_mnemonic" string="Cycle"/>
                <!-- <field name="bridge_envelope_id" readonly="1"/> -->
                <field name="approved_for_disbursement" widget="boolean_button" readonly="1"/>
                <!-- <field name="envelope_creation_status" string="Envelope Creation Status" widget="badge"/> -->
                <!-- <field name="batch_creation_status" string="Disbursement Batch Creation Status" widget="badge"/> -->
                <field name="creation_date" string="Created On"/>
                <button name="action_open_view" type="object" string="View Disbursement Cycle" class="oe_link" />
                <!-- <button name="action_open_disbursement_envelope_summary_wizard" type="object" string="View Envelope Summary" class="oe_link" invisible="envelope_creation_status != 'complete'"/> -->
            </tree>
        </field>
    </record>
</odoo>
