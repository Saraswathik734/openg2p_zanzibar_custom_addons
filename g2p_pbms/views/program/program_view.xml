<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Action for Programs -->
  <record id="action_g2p_programs" model="ir.actions.act_window">
    <field name="name">Programs</field>
    <field name="res_model">g2p.program.definition</field>
    <field name="view_mode">tree,form</field>
    <field name="context">{'form_view_initial_mode': 'readonly', 'create': False}</field>
  </record>

  <!-- Program Form View -->
  <record id="view_g2p_programs_form" model="ir.ui.view">
    <field name="name">g2p.programs.form</field>
    <field name="model">g2p.program.definition</field>
    <field name="arch" type="xml">
      <form string="G2P Programs">
        <sheet>
          <group>
            <group string="Program Information">
              <field name="program_mnemonic" readonly="1"/>
              <field name="description" readonly="1"/>
            </group>
            <group string="Program Configuration">
              <field name="delivery_id" readonly="1"/>
              <field name="target_registry_type" readonly="1"/>
              <field name="program_status" readonly="1"/>
            </group>
            <group string="Entitlement Configuration">
              <field name="max_quantity" readonly="1"/>
            </group>
            <group string="Cycle Configuration">
                <field name="disbursement_frequency" readonly="1"/>
                <field name="disbursement_type" readonly="1"/>
                <field name="disbursement_cycle_list" readonly="1"/>
            </group>
          </group>
          <notebook>
            <!-- Eligibility Rule Page -->
            <page string="Eligibility Rules">
              <field name="eligibility_rule_ids" nolabel="1" options="{'no_quick_create': True}" context="{'default_target_registry_type': target_registry_type}">
                <tree default_order="id desc">
                  <control>
                    <create string="Add Eligibility Rule"/>
                  </control>
                  <field name="mnemonic" string="Rule Mnemonic" options="{'no_create': True, 'no_edit': True}"/>
                  <field name="description" string="Description"/>
                  <button name="action_open_view" type="object" class="fa fa-eye" title="View Eligibility Rule"/>
                </tree>
              </field>
            </page>
            <!-- Entitlement Rule Page -->
            <page string="Entitlement Rules">
              <field name="entitlement_rule_ids" nolabel="1" options="{'no_quick_create': True}" context="{'default_target_registry_type': target_registry_type}">
                <tree default_order="id desc">
                  <control>
                    <create string="Add Entitlement Rule"/>
                  </control>
                  <field name="mnemonic" string="Rule Mnemonic" options="{'no_create': True, 'no_edit': True}"/>
                  <field name="description" string="Description"/>
                  <button name="action_open_view" type="object" class="fa fa-eye" title="View Entitlement Rule"/>
                </tree>
              </field>
            </page>
            <!-- Beneficiary List Page -->
            <page string="Beneficiary Lists">
              <field name="que_eee_request_ids" nolabel="1"/>                
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Program Tree View -->
  <record id="view_g2p_programs_tree" model="ir.ui.view">
    <field name="name">g2p.programs.tree</field>
    <field name="model">g2p.program.definition</field>
    <field name="arch" type="xml">
      <tree string="G2P Programs" create="false">
        <field name="program_mnemonic"/>
        <field name="description"/>
        <field name="delivery_id"/>
        <field name="target_registry_type"/>
        <field name="program_status"/>
        <button name="action_open_edit" type="object" class="fa fa-pencil"/>
      </tree>
    </field>
  </record>

  <!-- Menus -->
  <menuitem id="menu_g2p_root" name="PBMS" sequence="1"/>
  <menuitem id="menu_g2p_programs" name="Programs" parent="menu_g2p_root" action="action_g2p_programs" sequence="2"/>
</odoo>
