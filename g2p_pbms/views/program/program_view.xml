<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Action for Programs -->
  <record id="action_g2p_programs" model="ir.actions.act_window">
    <field name="name">Programs</field>
    <field name="res_model">g2p.program.definition</field>
    <field name="view_mode">tree,form</field>
  </record>

  <!-- Program Form View -->
  <record id="view_g2p_programs_form" model="ir.ui.view">
    <field name="name">g2p.programs.form</field>
    <field name="model">g2p.program.definition</field>
    <field name="arch" type="xml">
      <form string="G2P Programs">
        <sheet>
          <group>
            <group string="Program Information">
              <field name="program_mnemonic" readonly="not context.get('program_form_edit')"/>
              <field name="description" readonly="not context.get('program_form_edit')"/>
              <field name="program_status" readonly="not context.get('program_form_edit')"/>
            </group>
            <group string="Program Configuration">
              <field name="target_registry" readonly="not context.get('program_form_create')"/>
              <field name="distribution_through_agencies" readonly="not context.get('program_form_create')"/> <!-- TODO: Lock this field if benefit_type is cash  -->
              <field name="only_direct_credit_allowed" readonly="not context.get('program_form_create')"/> <!-- TODO: Show this field only if benefit_type is cash  -->
            </group>
            <group string="Cycle Configuration" >
              <field name="show_disbursement_day_of_week" invisible="1"/>
              <field name="show_disbursement_day_of_month" invisible="1"/>
              <field name="show_disbursement_start_month" invisible="1"/>
              <field name="show_label_for_beneficiary_list" invisible="1"/>
              <field name="disbursement_frequency" readonly="not context.get('program_form_edit')"/>
              <field name="disbursement_day_of_week" readonly="not context.get('program_form_edit')"
                    invisible="not show_disbursement_day_of_week"/>
              <field name="disbursement_day_of_month" readonly="not context.get('program_form_edit')"
                    invisible="not show_disbursement_day_of_month"/>
              <field name="disbursement_start_month" readonly="not context.get('program_form_edit')"
                    invisible="not show_disbursement_start_month"/>
            </group>
          </group>
          <notebook>
            <!-- Benefit Codes Page -->
            <page string="Benefit Codes">
              <field name="benefit_code_ids" nolabel="1" options="{'no_quick_create': True}">
                <tree default_order="id desc">
                  <control>
                    <create string="Add Benefit Code"/>
                  </control>
                  <field name="benefit_mnemonic" string="Mnemonic" options="{'no_create': True, 'no_edit': True}"/>
                  <field name="benefit_type" string="Benefit Type"/>
                  <field name="benefit_description" string="Description"/>
                  <field name="measurement_unit" string="Measurement Unit"/>
                  <button name="action_open_view" type="object" string="View Benefit Code" class="oe_link" title="View Benefit Code"/>
                </tree>
              </field>
            </page>
            <!-- Eligibility Rules Page -->
            <page string="Eligibility Rules">
              <field name="eligibility_rule_ids" nolabel="1" options="{'no_quick_create': True}" context="{'default_target_registry': target_registry}">
                <tree default_order="id desc">
                  <control>
                    <create string="Add Eligibility Rule"/>
                  </control>
                  <field name="mnemonic" string="Rule Mnemonic" options="{'no_create': True, 'no_edit': True}"/>
                  <field name="description" string="Description"/>
                  <button name="action_open_view" type="object" string="View Eligibility Rule" class="oe_link" title="View Eligibility Rule"/>
                </tree>
              </field>
            </page>
            <!-- Entitlement Rules Page -->
            <page string="Entitlement Rules">
              <field name="entitlement_rule_ids" nolabel="1" options="{'no_quick_create': True}" context="{'default_target_registry': target_registry, 'default_allowed_benefit_code_ids': benefit_code_ids}">
                <tree default_order="id desc">
                  <control>
                    <create string="Add Entitlement Rule"/>
                  </control>
                  <field name="mnemonic" string="Rule Mnemonic" options="{'no_create': True, 'no_edit': True}"/>
                  <field name="description" string="Description"/>
                  <button name="action_open_view" type="object" string="View Entitlement Rule" class="oe_link" title="View Entitlement Rule"/>
                </tree>
              </field>
            </page>
            <!-- Enrollment Cycles Page -->
            <page string="Enrollment Cycles">
              <field name="enrollment_cycle_ids">
            </field>
            </page>
            <!-- Disbursement Cycles Page -->
            <page string="Disbursement Cycles">
              <field name="disbursement_cycle_ids" nolabel="1"/>                
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Program Tree View -->
  <record id="view_g2p_programs_tree" model="ir.ui.view">
    <field name="name">g2p.programs.tree</field>
    <field name="model">g2p.program.definition</field>
    <field name="arch" type="xml">
      <tree string="G2P Programs">
        <field name="program_mnemonic" />
        <field name="description"/>
        <!-- <field name="benefit_code_id"/> -->
        <field name="target_registry"/>
        <field name="program_status"/>
        <button name="action_open_edit" type="object" class="fa fa-pencil" title="Edit"/>
      </tree>
    </field>
  </record>

  <!-- Menus -->
  <menuitem id="menu_g2p_root" name="PBMS" sequence="1"/>
  <menuitem id="menu_g2p_programs" name="Programs" parent="menu_g2p_root" action="action_g2p_programs" sequence="2"/>
</odoo>
