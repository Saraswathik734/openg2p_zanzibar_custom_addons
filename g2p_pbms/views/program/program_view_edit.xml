<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Standalone Edit Form View for G2P Programs -->
    <record id="view_g2p_pgm_edit" model="ir.ui.view">
        <field name="name">g2p.programs.form.edit</field>
        <field name="model">g2p.program.definition</field>
        <field name="arch" type="xml">
            <form string="G2P Programs (Edit)">
                <sheet>
                    <group>
                        <group string="Program Information">
                            <field name="program_mnemonic"/>
                            <field name="description"/>
                        </group>
                        <group string="Program Configuration">
                            <field name="delivery_id"/>
                            <field name="target_registry_type"/>
                            <field name="program_status"/>
                        </group>
                        <group string="Entitlement Configuration">
                            <field name="max_quantity"/>
                        </group>
                        <group string="Cycle Configuration">
                            <field name="disbursement_frequency"/>
                            <field name="disbursement_type"/>
                            <field name="disbursement_cycle_list"/>
                        </group>
                    </group>
                    <notebook>
                        <!-- Eligibility Rule Page -->
                        <page string="Eligibility Rules">
                            <field name="eligibility_rule_ids" nolabel="1" options="{'no_quick_create': True}" context="{'default_target_registry_type': target_registry_type}">
                                <tree default_order="id desc">
                                    <control>
                                        <create string="Add Eligibility Rule"/>
                                    </control>
                                    <field name="mnemonic" string="Rule Mnemonic" options="{'no_create': True, 'no_edit': True}"/>
                                    <field name="description" string="Description"/>
                                    <button name="action_open_view" type="object" class="fa fa-eye" title="View Eligibility Rule"/>
                                </tree>
                            </field>
                        </page>
                        <!-- Entitlement Rule Page -->
                        <page string="Entitlement Rules">
                            <field name="entitlement_rule_ids" nolabel="1" options="{'no_quick_create': True}" context="{'default_target_registry_type': target_registry_type}">
                                <tree default_order="id desc">
                                    <control>
                                        <create string="Add Eligibility Rule"/>
                                    </control>
                                    <field name="mnemonic" string="Rule Mnemonic" options="{'no_create': True, 'no_edit': True}"/>
                                    <field name="description" string="Description"/>
                                    <button name="action_open_view" type="object" class="fa fa-eye" title="View Eligibility Rule"/>
                                </tree>
                            </field>
                        </page>
                        <!-- Beneficiary List Page -->
                        <page string="Beneficiary Lists">
                            <field name="que_eee_request_ids" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
