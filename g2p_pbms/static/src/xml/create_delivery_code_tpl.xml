<?xml version="1.0" encoding="UTF-8" ?>
<template xml:space="preserve">

    <t t-name="CustomListViewButtons" t-inherit="web.ListView.Buttons" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('o_list_buttons')]" position="inside">
            <t t-set-slot="control-panel-create-button">
                <button
                    t-if="model.root.resModel == 'g2p.delivery.codes'"
                    type="button"
                    class="btn btn-primary o_list_button_add_codes"
                    accesskey="p"
                    title="Create a New Delivery Code"
                    t-on-click="load_delivery_code_wizard"
                >Create Code</button>
            </t>
        </xpath>
    </t>

</template>